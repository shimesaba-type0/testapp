<h1>Products</h1>

<p>
  Download:
  <%= link_to "CSV", products_path(format: "csv") %>
</p>

<table>
    <tr>
        <th>Product Name</th>
        <th>Release Date</th>
    </tr>
    <% @products.each do |product| %>
    <tr>
        <td><%= product.name %></td>
        <td><%= product.released_on.strftime("%B %e, %Y") %></td>
    </tr>
    <% end %>
</table>
